{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "schoolId": {
      "type": "string"
    },
    "slots": {
      "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "startHour": {
              "type": "string"
            },
            "endHour": {
              "type": "string"
            }
          }
        }
    }
  },
  "required": [
    "name",
    "schoolId",
    "slots"
  ]
}