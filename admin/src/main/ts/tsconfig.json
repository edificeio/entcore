{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "exclude": [
        "test.ts",
        "**/*.spec.ts",
        "main.aot.ts"
    ],
    "compileOnSave": false
}
