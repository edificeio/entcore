import { jsx } from "react/jsx-runtime";
import { useRef } from "react";
import { useTranslation } from "react-i18next";
import { useMediaLibraryContext } from "../MediaLibraryContext.js";
import VideoRecorder from "../../VideoRecorder/VideoRecorder.js";
const Video = () => {
  const {
    appCode,
    setResult,
    setPreSuccess
  } = useMediaLibraryContext(), {
    t
  } = useTranslation(), ref = useRef(null), handleRecordUpdated = (recordUrl) => {
    recordUrl ? (setResult(recordUrl), setPreSuccess(() => ref.current.save)) : setResult();
  }, handleError = (err) => {
    console.error(err);
  };
  return /* @__PURE__ */ jsx(VideoRecorder, { ref, appCode, caption: t("bbm.video.caption"), onRecordUpdated: handleRecordUpdated, onError: handleError, hideSaveAction: !0 });
};
export {
  Video
};
